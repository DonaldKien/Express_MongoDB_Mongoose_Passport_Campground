<%- include("../partials/header") %>


<div class="container">	
	<h1 class="text-center">Add New Comment to <%= campground.name %></h1>

	<div style="width: 30%; margin:50px auto" class="mx-auto">
		<form action="/campground/<%= campground._id %>/comments" method="POST" >
			<div class="form-group">
				<input class="form-control" name="comment[text]" type="text" placeholder="Enter new comment...">
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-md btn-block">submit</button>
			</div>
		</form>	
		<a href="/campground">Go Back</a>
	</div>
</div>


<%- include("../partials/footer") %>