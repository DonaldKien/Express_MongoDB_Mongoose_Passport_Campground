<%- include("../partials/header") %>

<div class="container">	
	<h1 class="text-center">Edit <%= currentCampground.name %></h1>

	<div style="width: 30%; margin:50px auto" class="mx-auto">
		<form action="/campground/<%= currentCampground._id %>?_method=PUT" method="POST" >
			<div class="form-group">
				<input class="form-control" name="editedCampground[name]" type="text" value="<%= currentCampground.name %>">
			</div>
			<div class="form-group">
				<input class="form-control" name="editedCampground[price]" type="number" value="<%= currentCampground.price %>" step="0.10">
			</div>
			<div class="form-group">
				<input class="form-control" name="editedCampground[image]" type="text" value="<%= currentCampground.image %>">
			</div>
			<div class="form-group">
				<input class="form-control" name="editedCampground[description]" type="text" value="<%= currentCampground.description %>">
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-md btn-block">submit</button>
			</div>
		</form>	
		<a href="/campground">Go Back</a>
	</div>

</div>

<%- include("../partials/footer") %>